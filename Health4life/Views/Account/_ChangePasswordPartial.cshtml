@model Health4life.Models.LocalPasswordModel

<h3>Change password</h3>

@using (Html.BeginForm("Manage", "Account",null,FormMethod.Post,new{@class="form-horizontal"})) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

        <fieldset>
            <legend>Change Password Form</legend>
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword,new {@class="col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.OldPassword,new{@class="form-control", placeholder="Enter current password"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword,new {@class="col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.NewPassword,new{@class="form-control", placeholder="Enter new password"})
                </div>
            </div>
                    
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword,new {@class="col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword,new{@class="form-control", placeholder="Repeat new password"})
                </div>
            </div>
                    
            <input type="submit" class="btn btn-primary" value="Change password" />
        </fieldset>
}
