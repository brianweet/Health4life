                            </a>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">Hide and seek</h4>
                                <p>Hide from teachers on 30-10-2013</p>
                            </a>
                        </div>
                    </div>

                    <div class="action-buttons">
                        @Html.ActionLink("Go to activities history", "Activities", "UserArea", null, new {@class="btn btn-large btn-success"})
                    </div>
                </li>
                <li>
                    <div class="header">
                        <h4>Connect hub</h4>
                    </div>

                    <div class="content">
                        Connect hub summary
                        <table class="table">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Valid until</th>
                        <th>Valid for</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var key in Model.ShareKeys)
                    {
                        var rowClass = (key.IsActive) ? "success" : null;
                        <tr class="@rowClass">
                            
                            <td>@key.Id</td>
                            <td>@key.ValidUntil.ToString("dd-MMM-yyyy HH:mm")</td>
                            <td>@key.ValidFor</td>
                            <td>
                                @if(key.IsActive)
                                {
                                    <button type="button" class="btn btn-sm btn-primary">Invalidate key</button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-sm btn-primary" disabled="disabled">Invalidate key</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
                    </div>

                    <div class="action-buttons">
                        @Html.ActionLink("Go to connect hub", "ConnectHub", "UserArea", null, new {@class="btn btn-large btn-success"})
                    </div>
                </li>
                <li>
                    <div class="header">
                        <h4>Patient History</h4>
                    </div>
                    <div class="content">
                        <div class="list-group">
                            <div class="list-group-item">
                                <h4 class="list-group-item-heading">Patient history summary</h4>
                            </div>
                            <a href="#" class="list-group-item">
                                <h4 class="list-group-item-heading">Broken leg</h4>
                                <p>Fractured femur on 26-10-2013</p>
                            </a>
                        </div>
                    </div>
                    <div class="action-buttons">
                        @Html.ActionLink("Go to patient history", "PatientHistory", "UserArea", null, new {@class="btn btn-large btn-success"})
                    </div>
                </li>
            </ul>
        </div>
    </div>
}