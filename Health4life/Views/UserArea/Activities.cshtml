@model Health4life.ViewModel.ActivitiesVm

@{
    ViewBag.Title = "Activities";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h3>-</h3>
        
        
    </div>
    <div class="col-md-6">
        <div class="list-group">
            <div class="list-group-item">
                <h4 class="list-group-item-heading">Activities summary</h4>
            </div>
            @foreach(var activity in Model.Activities)
            {
                <a href="#" class="list-group-item">
                    @if(activity.IsNew)
                    {
                        <p><span class="label label-default">New!</span></p>
                    }
                    @if(activity.IsFromGp)
                    {
                        <p><span class="label label-info">GP Advice</span></p>
                    }
                    <h4 class="list-group-item-heading">
                        @activity.Description
                    </h4>
                    <p>@activity.Description on @activity.Date.ToString("dd-MMM-yyyy")</p>
                </a>
            }

            @*<a href="#" class="list-group-item">
                <p><span class="label label-info">GP Advice</span></p>
                <h4 class="list-group-item-heading">
                    Walk 5 km
                </h4>
                <p>Walk 5 km on 25-10-2013</p>
                
            </a>
            <a href="#" class="list-group-item">
                <h4 class="list-group-item-heading">Hide and seek</h4>
                <p>Hide from teachers on 30-10-2013</p>
            </a>*@
